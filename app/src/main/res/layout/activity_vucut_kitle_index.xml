<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vucutKitleIndex"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#f45bb6">

    <TextView
        android:id="@+id/txtHesaplayıcı"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VKI Hesaplayıcı"
        android:textColor="#eeff"
        android:textSize="45sp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kilo"
            android:textSize="30sp"
            android:textColor="#eeff">
        </TextView>
        <EditText
            android:id="@+id/editTextKilo"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:inputType="numberDecimal"
            android:textSize="25sp"
            android:hint="KG"
            android:background="#ffff"
            android:gravity="center"
            android:layout_marginLeft="80dp">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boy"
            android:textSize="30sp"
            android:textColor="#eeff">
        </TextView>
        <EditText
            android:id="@+id/editTextBoy"
            android:layout_width="95dp"
            android:layout_height="55dp"
            android:inputType="numberDecimal"
            android:textSize="25sp"
            android:hint="CM"
            android:gravity="center"
            android:background="#ffff"
            android:layout_marginLeft="80dp">
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/btnHesapla"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="Hesapla"
        android:textSize="25sp"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_marginTop="30dp">
    </Button>
    <TextView
        android:id="@+id/txtDetay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Sonuç Detayı"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:layout_marginTop="30dp">
    </TextView>
    <TextView
        android:id="@+id/txtHesap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="VKİ = ?"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_error"
        android:layout_marginTop="30dp">
    </TextView>

    <Button
        android:id="@+id/btnSifirla"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="Sıfırla"
        android:textSize="25sp"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_marginTop="30dp">
    </Button>
</LinearLayout>